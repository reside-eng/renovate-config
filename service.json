{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>reside-eng/renovate-config",
    "packages:react",
    "group:graphql-toolsMonorepo",
    "group:material-uiMonorepo",
    "group:storybookMonorepo",
    "group:nextjsMonorepo",
    "group:emotionMonorepo"
  ],
  "packageRules": [
    {
      "description": "Automerge non-major npm dev dependencies off business hours",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDatasources": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "schedule": ["after 10pm and before 5am every weekday", "every weekend"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Automerge patch npm dependencies on weekday mornings",
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "matchDatasources": ["npm"],
      "matchDepTypes": ["dependencies"],
      "schedule": ["after 5am and before 8am every weekday"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Automerge minor Side Inc. npm dependencies on weekday mornings",
      "matchUpdateTypes": ["minor"],
      "matchDatasources": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchPackagePrefixes": ["@side/"],
      "schedule": ["after 5am and before 8am every weekday"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Automerge non-major Github Actions dependencies off business hours",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDepTypes": ["action"],
      "schedule": ["after 10pm and before 5am every weekday", "every weekend"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Ignore Side Inc. private docker image updates (registry auth not yet setup) [PLAT-1660]",
      "matchPackagePrefixes": ["us-central1-docker.pkg.dev/reside-prod"],
      "matchManagers": ["dockerfile"]
    }
  ]
}
