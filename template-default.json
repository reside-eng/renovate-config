{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>reside-eng/renovate-config", "schedule:quarterly"],
  "rangeStrategy": "pin",
  "prConcurrentLimit": 100,
  "platformAutomerge": true,
  "platformCommit": true,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "rebaseWhen": "never",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:quarterly"]
  }
}
