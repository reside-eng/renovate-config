{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>reside-eng/renovate-config:group-dep-types",
    "github>reside-eng/renovate-config",
    "packages:react"
  ],
  "packageRules": [
    {
      "description": "Group @mui/x-* packages",
      "matchPackagePatterns": ["^@mui/x-"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "MUI X",
      "updateNotScheduled": false
    },
    {
      "matchDepNames": ["next", "@next/bundle-analyzer", "@next/env"],
      "allowedVersions": "^14.2.16",
      "description": "Next 15 update blocked because recoil does not support React 19 [PLAT-8597]"
    }
  ]
}
